[MASTER]

ignore=tests
fail-under=8.0

[MESSAGE CONTROL]

disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring,
        unidiomatic-typecheck

[FORMAT]

max-line-length=88

[REFACTORING]

[DESIGN]

max-args=5
